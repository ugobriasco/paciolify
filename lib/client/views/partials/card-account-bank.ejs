<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-sm-2">
        <h2><i class="fa fa-university" aria-hidden="true"></i></h2>
      </div>
      <div class="col-sm-10">
        <% if(linkedBankName) { %>
          <div>
            <p><strong>Your bank account:</strong></p>
            <p><%= linkedBankName  %> - <%= linkedIBAN  %></p>
            <div class="text-right">
              <%- include('../partials/modal-change-bank', {userID, icon:'fa-pencil'}); %>
            </div>
          </div>
         <% } else{ %>
           <div>
             <div class="alert alert-danger" role="alert">
               No bank account linked yet, or session expired
              </div>
              <div class="text-right">
                <%- include('../partials/modal-change-bank', {userID, icon:'fa-plus'}); %>
              </div>
           </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
