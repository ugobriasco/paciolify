{
  "name": "paciolify",
  "version": "0.1.0",
  "description": "Family accounting application",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "scripts": {
    "start": "node .",
    "test": "npm run test:unit && npm build:deptree",
    "test:unit": "mocha lib/**/*/**/__tests/*.spec.js --recursive",
    "test:integration": "mocha test/integration/*.spec.js --recursive",
    "test:e2e": "mocha test/e2e/*.spec.js --recursive",
    "build:deptree": "depcruise --exclude '^node_modules' --output-type dot lib | dot -T svg > dependencygraph.svg"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ugobriasco/paciolify.git"
  },
  "keywords": [
    "n26",
    "accounting"
  ],
  "author": "Ugo Briasco",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ugobriasco/paciolify/issues"
  },
  "homepage": "https://github.com/ugobriasco/paciolify#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "dependency-cruiser": "^4.26.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.1.0",
    "mocha": "^6.1.4",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "chai-http": "^4.3.0",
    "express": "^4.17.1",
    "mongoose": "^5.6.4"
  }
}
